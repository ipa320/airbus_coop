<?xml version="1.0"?>
<launch>
  <arg name="scxml_file"      	value="${airbus_ssm_tutorial}/resources/scxml/Tutorial1.scxml"/>
  <param name="ssm_server_name" 	value="ssm"/>
  <param name="ssm_log_path"    	value="/tmp/"/>
  <param name="ssm_autostart"   	value="True"/>
  <param name="ssm_enable_log"		value="False"/>
  
  <node name="ssm_node" pkg="airbus_ssm_core" type="ssm_node.py" respawn="false" output="screen">
  		<param name="scxml_file" value="$(arg scxml_file)"/>
  </node>
  
  
        
</launch>
